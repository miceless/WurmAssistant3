<Application x:Class="WurmAssistant3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             xmlns:appCore="clr-namespace:AldurSoft.WurmAssistant3.AppCore"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <appCore:ApplicationBootstrapper x:Key="Bootstrapper" />
                </ResourceDictionary>
                <ResourceDictionary>
                    <xctk:VisibilityToBoolConverter x:Key="VisibilityToBoolConverter" 
                                                    Inverted="True" />
                    <xctk:VisibilityToBoolConverter x:Key="VisibilityToBoolConverterNot" 
                                                    Inverted="True" Not="True" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
